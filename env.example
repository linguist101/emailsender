# SMTP settings (use your ESP or SMTP relay: Mailgun, SendGrid, Amazon SES, Postmark, etc.)
SMTP_HOST=smtp.mailgun.org
SMTP_PORT=587
SMTP_USERNAME=postmaster@YOUR_DOMAIN
SMTP_PASSWORD=YOUR_PASSWORD
SENDER_NAME=Linguist Point
SENDER_EMAIL=hello@YOUR_DOMAIN
REPLY_TO=hello@YOUR_DOMAIN

# Compliance
UNSUBSCRIBE_URL=https://YOUR_DOMAIN/unsubscribe?email={{email}}
COMPANY_POSTAL_ADDRESS=Your Company, 123 High Street, London, UK

# Safety / throttling
MAX_PER_RUN=50
SECONDS_BETWEEN_EMAILS=5
